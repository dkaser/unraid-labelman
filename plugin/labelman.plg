<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/labelman/unraid-labelman-0.3-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/labelman/unraid-labelman-*.txz 2>/dev/null | grep -v '0.3')

echo ""
echo "----------------------------------------------------"
echo " labelman has been installed."
echo " Version: 0.3"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

