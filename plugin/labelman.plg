<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/labelman/unraid-labelman-2025.08.03-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/labelman/unraid-labelman-*.txz 2>/dev/null | grep -v '2025.08.03')

echo ""
echo "----------------------------------------------------"
echo " labelman has been installed."
echo " Version: 2025.08.03"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
